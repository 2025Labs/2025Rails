<% provide(:title, 'Engineering for Kids Internet Resources: 2025 Labs') %>
<% provide(:description, 'Links to useful engineering related web sites, which includes some educational (and entertaining!) videos, games and activities.') %>

<div class="row-fluid">
	

	<div class="span2">
		<div class="row-fluid">
			<div class="span12">
				<%= render "static_pages/resourcesnav" %>
			</div>
		</div>	
	</div>
	
	
    <div class="span7">
		<% @resource_type.each do |resource_type| %>
		<h2> <%= resource_type.r_type.html_safe%> </h2>
		<%= resource_type.description.html_safe%><br><br>
		<% end %>
		
		<% @resources.each do |resource| %>
		<div class="row-fluid">
			<div class="span3">
				<% unless resource.engineering_process.blank? %>
					<%= link_to image_tag(resource.engineering_process, :class => 'resourcebutton'),   engineering_process_path %>
				<% end %>

				<% unless resource.materials.blank? %>
					<%= link_to image_tag(resource.materials, :class => 'resourcebutton'),   materials_path %>
				<% end %>
					
				<% unless resource.structures.blank? %>
					<%= link_to image_tag(resource.structures, :class => 'resourcebutton'),   structures_path %>
				<% end %>

				<% unless resource.machines.blank? %>
					<%= link_to image_tag(resource.machines, :class => 'resourcebutton'),   machines_path %>
				<% end %>

				<% unless resource.energy.blank? %>
					<%= link_to image_tag(resource.energy, :class => 'resourcebutton'),   energy_path %>
				<% end %>

				<% unless resource.computing.blank? %>
					<%= link_to image_tag(resource.computing, :class => 'resourcebutton'),   computing_path %>
				<% end %>
				
				<p><%= resource.ages %>	
			</div>

			<div class="span9">
				<span class="colortxt2"><%=resource.title.html_safe %></span>
				<%=resource.description.html_safe %>			
			</div> <!--span9-->	
		</div><!--row-->	

		<div class="row-fluid">
			<div class="span12">
			</div> <!--span12-->	
		</div> <!--row-->
		<% end %>
		
		<a href="mailto:info@2025labs.com?Subject=Suggestion%20For%20Web%20Resources" target="_top"><%= image_tag("pics/resource_suggestion.png", :alt => "suggest a resource", :class =>"center") %></a>
						
    </div> <!--span7-->	
		
	<div class="span3">	
		<div class="row-fluid">
			<br><br><br>
			<div class="facts"><a class="facts1" <%= link_to "7%",    research_path %></a></div>
			<br>
			According to CNNMoney, only 7% of corporate CIOs (Chief Information Officers) are women.
			<hr>
    	</div> <!--span12-->

        <div class="row-fluid">
			<div class="span12">				
			</div> <!--span12-->
		</div> <!--row-->

		<div class="row-fluid" style="text-align:center">
			<%= render "layouts/skyscraperad" %>				
		</div> <!--row-->
	</div> <!--span3-->	
		
</div>	<!--row-->

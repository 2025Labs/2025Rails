
<div class="container-fluid">
<div class="slidearea" style="padding-bottom: 20px; padding-left: 10px; padding-right: 10px;">
<% provide(:title, 'Engineering for Kids Internet Resources: 2025 Labs') %>
<% provide(:description, 'Links to useful engineering related web sites, which includes some educational (and entertaining!) videos, games and activities.') %>
	
	<div class="row featurette grid-divider">

	<div class="col-sm-2">
		<div class="container-fluid">
			<div class="row">
				<div class="col-xs-12">
				<span class="visible-sm visible-md visible-lg">
					<%= render "static_pages/resourcesnav" %>
					</span>
				</div>
			</div>
		</div>
	</div>
	
    <div class="col-sm-7">
    	<div class="col-padding1">
		<% @resource_type.each do |resource_type| %>
		<h2> <%= resource_type.r_type.html_safe%> </h2>
		<%= resource_type.description.html_safe%><br><br>
		<% end %>
		
		<% @resources.each do |resource| %>
		<div class="row">
			<div class="col-sm-3">
				<% unless resource.engineering_process.blank? %>
					<%= link_to image_tag(resource.engineering_process, :class=> 'featurette-image img-responsive center-block', :class => 'resourcebutton'),   engineering_process_path %>
				<% end %>

				<% unless resource.materials.blank? %>
					<%= link_to image_tag(resource.materials, :class=> 'featurette-image img-responsive center-block', :class => 'resourcebutton'),   materials_path %>
				<% end %>
					
				<% unless resource.structures.blank? %>
					<%= link_to image_tag(resource.structures, :class=> 'featurette-image img-responsive center-block', :class => 'resourcebutton'),   structures_path %>
				<% end %>

				<% unless resource.machines.blank? %>
					<%= link_to image_tag(resource.machines, :class => 'resourcebutton'),   machines_path %>
				<% end %>

				<% unless resource.energy.blank? %>
					<%= link_to image_tag(resource.energy, :class=> 'featurette-image img-responsive center-block', :class => 'resourcebutton'),   energy_path %>
				<% end %>

				<% unless resource.computing.blank? %>
					<%= link_to image_tag(resource.computing, :class=> 'featurette-image img-responsive center-block', :class => 'resourcebutton'),   computing_path %>
				<% end %>
				
				<p><%= resource.ages %>	
			</div>

			<div class="col-sm-9">
				<span class="colortxt2"><%=resource.title.html_safe %></span>
				<%=resource.description.html_safe %>			
			</div> <!--col-sm-9-->	
		</div><!--row-->	

		<div class="row">
			<div class="col-sm-12">
			
			</div> <!--col-sm-12-->	
		</div> <!--row-->
		<% end %>
		
		<a href="mailto:info@2025labs.com?Subject=Suggestion%20For%20Web%20Resources" target="_top"><%= image_tag("pics/resource_suggestion.png", :class=> 'featurette-image img-responsive center-block', :alt => "suggest a resource", :class =>"center") %></a>
		</div>				
    </div> <!--col-sm-7-->	

	<div class="col-sm-3">	
		<div class="col-padding2">
		<div class="container-fluid">	
		<div class="row">
			
			<span class="visible-sm visible-md visible-lg">
			<div class="facts"><a class="facts1" <%= link_to "7%",    research_path %></a></div>
			<br>
			According to CNNMoney, only 7% of corporate CIOs (Chief Information Officers) are women.
			<hr>
			</span>
    	</div> <!--col-sm-12-->
    	</div>
        <div class="row">
			<div class="col-sm-12">		
			<span class="visible-sm visible-md visible-lg">
			</span>		
			</div> <!--col-sm-12-->
		</div> <!--row-->

		<div class="row" style="text-align:center">
			<span class="visible-sm visible-md visible-lg">
			<iframe src="http://rcm-na.amazon-adsystem.com/e/cm?t=2025labs-20&o=1&p=14&l=ur1&category=stem&banner=09PFBRBM7S1P6G18CPG2&f=ifr&linkID=UPKW3XOG5NQIOX4H" width="160" height="600" scrolling="no" border="0" marginwidth="0" style="border:none;" frameborder="0"></iframe>		
			</span>	
		</div> <!--row-->
	</div> <!--col-sm-3-->	</div>
	</div>	
</div>	<!--row-->
</div>